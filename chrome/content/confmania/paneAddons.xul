<!DOCTYPE overlay [
<!ENTITY % brandDTD SYSTEM "chrome://global/locale/brand.dtd">
%brandDTD;
<!ENTITY % preferencesDTD SYSTEM "chrome://confmania/locale/preferences.dtd">
%preferencesDTD;
]>

<overlay id="paneDebugOverlay"
 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
<prefpane id="paneAddons" orient="vertical">

<preferences>
  <preference name="extensions.getAddons.maxResults" id="extensions.getAddons.maxResults" type="int"/>
  <preference name="security.dialog_enable_delay" id="security.dialog_enable_delay" type="int"/>
  <preference name="extensions.checkCompatibility" id="extensions.checkCompatibility" type="bool" inverted="true"/>
  <preference name="extensions.checkCompatibility.3.6" id="extensions.checkCompatibility.3.6" type="bool" inverted="true"/>
  <preference name="extensions.checkCompatibility.3.7a" id="extensions.checkCompatibility.3.7a" type="bool" inverted="true"/>
  <preference name="extensions.checkCompatibility.4.0b" id="extensions.checkCompatibility.4.0b" type="bool" inverted="true"/>
  <preference name="extensions.checkUpdateSecurity" id="extensions.checkUpdateSecurity" type="bool" inverted="true"/>
  <preference name="extensions.hideInstallButton" id="extensions.hideInstallButton" type="bool" inverted="true"/>
  <preference name="dom.ipc.plugins.enabled" id="dom.ipc.plugins.enabled" type="bool"/>
  <preference name="extensions.alwaysUnpack" id="extensions.alwaysUnpack" type="bool"/>
</preferences>

<hbox align="center">
  <label value="&addons.get_addons_maxResults.label;" control="ext-maxResults"/>
  <textbox id="ext-maxResults" preference="extensions.getAddons.maxResults" type="number" hidespinbuttons="true" min="1" size="3"/>
</hbox>
<hbox align="center">
  <label value="&addons.dialog_enable_delay.label;" control="ext-delay"/>
  <textbox id="ext-delay" preference="security.dialog_enable_delay" type="number" hidespinbuttons="true" min="0" size="4"/>
  <label value="&miliseconds;"/>
</hbox>
<groupbox orient="horizontal">
<caption label="&addons.noCheckCompatibility.label;"/>
<checkbox label="Firefox 3.5" preference="extensions.checkCompatibility" />
<checkbox label="Firefox 3.6" preference="extensions.checkCompatibility.3.6" />
<checkbox label="Firefox 3.7a" preference="extensions.checkCompatibility.3.7a" />
<checkbox label="Firefox 4.0b" preference="extensions.checkCompatibility.4.0b" />
</groupbox>
<checkbox label="&addons.noCheckUpdateSecurity.label;"
          preference="extensions.checkUpdateSecurity"/>
<checkbox label="&addons.installButton.label;"
          preference="extensions.hideInstallButton"/>
<checkbox label="&addons.oopp.label;"
          preference="dom.ipc.plugins.enabled"/>
<checkbox label="&addons.alwaysUnpack.label;"
          preference="extensions.alwaysUnpack"/>

</prefpane>
</overlay>
